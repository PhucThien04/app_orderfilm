<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn vào button -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#D32F2F" /> <!-- Màu đỏ đậm khi nhấn -->
            <corners android:radius="16dp" /> <!-- Bo góc 16dp -->
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B22A38" /> <!-- Màu đỏ bình thường -->
            <corners android:radius="16dp" /> <!-- Bo góc 16dp -->
        </shape>
    </item>
</selector>
