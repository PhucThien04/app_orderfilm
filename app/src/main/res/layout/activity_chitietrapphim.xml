<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChitietrapphimActivity"
    android:orientation="vertical">

    <!-- Ô chứa tiêu đề và nút quay lại -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_header"
        android:padding="16dp"
        android:layout_alignParentTop="true">

        <!-- Nút quay lại  -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            app:tint="#FFFFFF"
            android:layout_marginLeft="13dp"
            android:layout_alignParentStart="true" />

        <!-- TextView tiêu đề -->
        <TextView
            android:id="@+id/tvTieude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/afacad_bold"
            android:gravity="center"
            android:text="CANTAVIL"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Hàng nút cho 7 ngày trong tuần -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnMonday"
            style="@style/DayButtonStyle"
            android:text="Mon" />

        <Button
            android:id="@+id/btnTuesday"
            style="@style/DayButtonStyle"
            android:text="Tue" />

        <Button
            android:id="@+id/btnWednesday"
            style="@style/DayButtonStyle"
            android:text="Wed" />

        <Button
            android:id="@+id/btnThursday"
            style="@style/DayButtonStyle"
            android:text="Thu" />

        <Button
            android:id="@+id/btnFriday"
            style="@style/DayButtonStyle"
            android:text="Fri" />

        <Button
            android:id="@+id/btnSaturday"
            style="@style/DayButtonStyle"
            android:text="Sat" />

        <Button
            android:id="@+id/btnSunday"
            style="@style/DayButtonStyle"
            android:text="Sun" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/img_dc" />
        <TextView
            android:id="@+id/btnDchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Địa chỉ"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- RecyclerView để hiển thị danh sách phim -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revPhim"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>