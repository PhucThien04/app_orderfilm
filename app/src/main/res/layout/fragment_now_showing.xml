<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Now_Showing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#1a1a2e">

        <!-- Slider -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerSlider_nowshowing"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Scrollable Movie List -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Movie Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#1E1E2F"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal">

                    <!-- Movie Image -->
                    <ImageView
                        android:id="@+id/imgMovie_1"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cam" />

                    <!-- Movie Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvMovieTitle_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CÁM"
                            android:textSize="18sp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvMovieDuration_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời lượng: 122 phút"
                            android:textSize="14sp"
                            android:textColor="#CCCCCC"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvMovieReleaseDate_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khởi chiếu: 20/09/2024"
                            android:textSize="14sp"
                            android:textColor="#CCCCCC"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvMovieGenre_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại: Thriller/Criminal/Horror"
                            android:textSize="14sp"
                            android:textColor="#CCCCCC"
                            android:layout_marginTop="2dp" />

                        <!-- Buy Ticket Button -->
                        <Button
                            android:id="@+id/btnBuyTicket_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mua vé ngay"
                            android:background="@drawable/bg_button_red"
                            android:textColor="#FFFFFF"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>

