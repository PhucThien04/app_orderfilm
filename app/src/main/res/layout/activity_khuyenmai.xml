<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KhuyenmaiActivity">

    <!-- Ô chứa tiêu đề và nút quay lại -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#B22A38"
        android:padding="16dp">

        <!-- Nút quay lại -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            app:tint="#FFFFFF" />

        <!-- TextView tiêu đề -->
        <TextView
            android:id="@+id/tvTieude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/afacad_bold"
            android:gravity="center"
            android:text="KHUYẾN MÃI"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_khuyenmai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextAppearance="@style/Khuyenmai"
        app:tabSelectedTextColor="#000000"
        app:tabTextColor="#BEAEB0" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/khuyenmai_viewpager"
        android:layout_width="match_parent"
        android:layout_below="@+id/tab_khuyenmai"
        android:layout_height="match_parent"/>

</LinearLayout>