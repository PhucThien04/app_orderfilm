                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvMovieTitle_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LÀM GIÀU VỚI MA"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMovieDuration_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời lượng: 115 phút"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvMovieReleaseDate_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khởi chiếu: D-3"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvMovieGenre_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: Comedy"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="2dp" />

                    <!-- Buy Ticket Button -->
                    <Button
                        android:id="@+id/btnBuyTicket_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua vé ngay"
                        android:background="@drawable/bg_button_red"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Movie Item 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="#1E1E2F"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

                <!-- Movie Image -->
                <ImageView
                    android:id="@+id/imgMovie_4"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/robothoangda" />

                <!-- Movie Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvMovieTitle_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ROBOT HOANG DÃ"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMovieDuration_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời lượng: 102 phút"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvMovieReleaseDate_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khởi chiếu: D-3"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvMovieGenre_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: Animation"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="2dp" />

                    <!-- Buy Ticket Button -->
                    <Button
                        android:id="@+id/btnBuyTicket_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã lên lịch"
                        android:background="@drawable/bg_button_red"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Movie Item 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="#1E1E2F"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

                <!-- Movie Image -->
                <ImageView
                    android:id="@+id/imgMovie_5"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/treuroiyeu" />

                <!-- Movie Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvMovieTitle_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRÊU RỒI YÊU"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMovieDuration_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời lượng: 119 phút"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvMovieReleaseDate_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khởi chiếu: D-3"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvMovieGenre_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: Comedy, Romance"
