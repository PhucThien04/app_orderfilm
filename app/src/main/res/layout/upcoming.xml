<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a2e"
    android:padding="16dp"
    android:id="@+id/upcoming">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            app:tint="#FFFFFF" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Phim"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Tab Layout (Now Showing / Upcoming) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvPhimDangChieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phim đang chiếu"
            android:textSize="16sp"
            android:textColor="#AAAAAA"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvPhimSapChieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phim sắp chiếu"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Scrollable Movie List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Movie Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="#1E1E2F"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

                <!-- Movie Image -->
                <ImageView
                    android:id="@+id/imgMovie_1"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/modomdom" />

                <!-- Movie Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvMovieTitle_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MỘ ĐOM ĐÓM"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMovieDuration_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời lượng: 90 phút"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/tvMovieReleaseDate_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Khởi chiếu: D-3"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/tvMovieGenre_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thể loại: Animation"
                        android:textSize="14sp"
                        android:textColor="#CCCCCC"
                        android:layout_marginTop="2dp" />

                    <!-- Buy Ticket Button -->
                    <Button
                        android:id="@+id/btnBuyTicket_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua vé ngay"
                        android:background="@drawable/bg_button_red"
                        android:textColor="#FFFFFF"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Movie Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="#1E1E2F"
